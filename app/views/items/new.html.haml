= form_with model: @item do |form|

    %p
        = form.label :title
        = form.text_field :title

    %p
        = form.label :category
        = form.text_field :category

    %p
        = form.label :description
        = form.text_field :description

    %p
        = form.label :price
        = form.number_field :price

    %p
        = form.submit "Add item to menu"